#!/usr/bin/env bash
#sets up load balancers
sudo apt install -y haproxy
sudo echo -e "frontend haproxynode
\tbind *:80
\tmode http
\tdefault_backend nodes" | sudo tee -a /etc/haproxy/haproxy.cfg
sudo echo -e "backend nodes
\tmode http
\tbalance roundrobin
\toption forwardfor
\thttp-request set-header X-Forwarded-Port %[dst_port]
\tserver 274-web-01 35.231.71.122:80 check
\tserver 274-web-02 35.196.73.169:80 check" | sudo tee -a /etc/haproxy/haproxy.cfg
sudo service haproxy restart
